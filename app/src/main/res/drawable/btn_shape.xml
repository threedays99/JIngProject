<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--没点击按钮的时候-->
    <item android:state_pressed="false">
        <shape><!--按钮形状-->
            <corners android:radius="15dip"/>
            <solid android:color="@color/lightgray" /><!--按钮背景填充色-->
            <stroke
                android:width="1dp"
                android:color="@color/skyblue" /><!--按钮边框-->
        </shape>
    </item>

    <!--当点击按钮后背景色变为深灰色-->
    <item android:state_pressed="true">
        <shape><!--按钮形状-->
            <corners android:radius="15dip"/>
            <solid android:color="@color/gray" /><!--按钮背景填充色-->
            <stroke
                android:width="1dp"
                android:color="@color/skyblue" /><!--按钮边框-->
        </shape>
    </item>


</selector>